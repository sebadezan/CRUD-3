<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offse-3">
            <h4>Modificar la novedad</h4>
            <form action="admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="Titulo" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="subtitulo" placeholder="Subtitulo" >{{novedad.subtitulo}}</textarea>
                </div>

                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>

                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <div class="form-group">
                    <textarea class="form-control" name="cuerpo" placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
            </form>
            {{#if error}} 
               <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>